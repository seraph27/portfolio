---
import { cn } from '@/lib/utils'

interface Props {
  title?: string
  class?: string
  noPadding?: boolean
}

const { title, class: className, noPadding = false } = Astro.props
---

<div
  class={cn(
    'border bg-card transition-colors duration-300 ease-in-out',
    !noPadding && 'p-4',
    className,
  )}
>
  {
    title && (
      <h3 class="text-foreground mb-4 text-lg font-semibold">{title}</h3>
    )
  }
  <slot />
</div>
