---
import Link from '@/components/Link.astro'
import { NAV_LINKS } from '@/consts'
import { Image } from 'astro:assets'
import avatar from '../../public/avatar.jpg'
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center">
      <Image
        src={avatar}
        alt="Rex Chao"
        class="size-10 rounded-full object-cover"
        width={80}
        height={80}
        quality={95}
      />
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6" style="font-family: 'Torus', ui-sans-serif, system-ui, sans-serif;">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
    </div>
  </div>
</div>
