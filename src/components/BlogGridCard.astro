            <Icon name="lucide:eye" class="beatmapset-panel__stats-icon-inner" />
          </span>
          <span>{views.toLocaleString()}</span>
        </div>
      </div>

      <!-- Date row -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--date">
