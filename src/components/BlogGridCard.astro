          8. ðŸ”– Tag Count - Show number of tags/categories
          9. ðŸ“ˆ Trend Indicator - Up/down arrow if views trending
          10. ðŸŽ¯ Difficulty Badge - Quick visual difficulty indicator
        -->
      </div>
    </div>
  </div>

  <!-- Play Button -->
  <button
    class="beatmapset-panel__play-button play-button"
    data-audio-src={entry.data.audio ? `/blog/${entry.id}/${entry.data.audio.replace('./', '')}` : ''}
    data-entry-title={entry.data.title}
    data-audio-start={entry.data.audioStartTime ?? 0}
    data-audio-volume={entry.data.audioVolume ?? 5}
    aria-label="Play preview"
    onclick="event.preventDefault(); event.stopPropagation();"
  >
    <Icon name="lucide:play" class="beatmapset-panel__play-icon" />
  </button>
</a>

<script>
  // Difficulty popup hover logic
  document.addEventListener('astro:page-load', () => {
    const timeouts: Record<string, number> = {}
    
    document.querySelectorAll('.extra-row').forEach((row) => {
      const entryId = (row as HTMLElement).dataset.entryId
      const popup = document.querySelector(`[data-popup-id="${entryId}"]`) as HTMLElement
      
      if (!popup) return
      
      const updatePopupPosition = () => {
        const card = row.closest('.beatmapset-panel') as HTMLElement
        if (!card) return
        
        const cardRect = card.getBoundingClientRect()
        popup.style.left = `${cardRect.left}px`
        popup.style.top = `${cardRect.bottom}px`
        popup.style.width = `${cardRect.width}px`
      }
      
      const delayedShow = () => {
        window.clearTimeout(timeouts[entryId!])
        if (popup.style.opacity === '1') return
        
        updatePopupPosition()
        timeouts[entryId!] = window.setTimeout(() => {
          popup.style.opacity = '1'
          popup.style.pointerEvents = 'auto'
        }, 100)
      }
      
      const delayedHide = () => {
        window.clearTimeout(timeouts[entryId!])
        if (popup.style.opacity === '0') return
        
        timeouts[entryId!] = window.setTimeout(() => {
          popup.style.opacity = '0'
          popup.style.pointerEvents = 'none'
        }, 500)
      }
      
      const keepOpen = () => {
        window.clearTimeout(timeouts[entryId!])
        popup.style.opacity = '1'
        popup.style.pointerEvents = 'auto'
      }
      
      row.addEventListener('mouseenter', delayedShow)
      row.addEventListener('mouseleave', delayedHide)
      popup.addEventListener('mouseenter', keepOpen)
      popup.addEventListener('mouseleave', delayedHide)
      
      window.addEventListener('scroll', updatePopupPosition, true)
      window.addEventListener('resize', updatePopupPosition)
    })
  })
</script>
