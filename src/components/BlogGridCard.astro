---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  entry: CollectionEntry<'blog'>
}

const { entry } = Astro.props
const shortDate = new Intl.DateTimeFormat('en-US', { month: 'short', day: 'numeric', year: 'numeric' }).format(entry.data.date)
const views = entry.data.views || Math.floor(Math.random() * 5000) + 500
const favorites = entry.data.favorites || Math.floor(Math.random() * 100) + 10

// Group difficulties by gamemode
const groupedDifficulties = new Map<string, Array<{ rating: number; mode: string }>>()
if (entry.data.difficulties && entry.data.difficulties.length > 0) {
  entry.data.difficulties.forEach((diff) => {
    const mode = diff.mode
    if (!groupedDifficulties.has(mode)) {
      groupedDifficulties.set(mode, [])
    }
    groupedDifficulties.get(mode)!.push({ rating: diff.rating, mode })
  })
}

// Get difficulty color based on osu's color spectrum
const getDifficultyColor = (rating: number): string => {
  const domain = [0.1, 1.25, 2, 2.5, 3.3, 4.2, 4.9, 5.8, 6.7, 7.7, 9]
  const range = [
    'oklch(0.7 0.15 250)', // light blue
    'oklch(0.75 0.12 220)', // cyan
    'oklch(0.85 0.1 180)', // turquoise
    'oklch(0.8 0.2 140)', // lime green
    'oklch(0.9 0.15 100)', // yellow
    'oklch(0.75 0.15 40)', // orange
    'oklch(0.65 0.2 10)', // pink
    'oklch(0.6 0.2 320)', // purple
    'oklch(0.55 0.15 280)', // indigo
    'oklch(0.3 0.15 270)', // dark blue
    'oklch(0.2 0 0)', // black
  ]
  
  const clampedRating = Math.max(0.1, Math.min(9, rating))
  
  let lowerIdx = 0
  let upperIdx = domain.length - 1
  
  for (let i = 0; i < domain.length - 1; i++) {
    if (clampedRating >= domain[i] && clampedRating <= domain[i + 1]) {
      lowerIdx = i
      upperIdx = i + 1
      break
    }
  }
  
  const lowerVal = domain[lowerIdx]
  const upperVal = domain[upperIdx]
  const t = (clampedRating - lowerVal) / (upperVal - lowerVal)
  return t < 0.5 ? range[lowerIdx] : range[upperIdx]
}

// Gamemode icon class mapping (FontAwesomeExtra)
const getGamemodeIconClass = (mode: string) => {
  const iconMap: Record<string, string> = {
    'osu': 'fa-extra-mode-osu',
    'taiko': 'fa-extra-mode-taiko',
    'catch': 'fa-extra-mode-fruits',
    'mania': 'fa-extra-mode-mania',
  }
  return iconMap[mode] || 'fa-extra-mode-osu'
}
---

<a 
  href={`/${entry.collection}/${entry.id}`}
  class="beatmapset-panel"
  data-entry-id={entry.id}
>
  <!-- Enlarged Background Image -->
  {
    entry.data.image ? (
      <div class="beatmapset-panel__bg-image">
        <Image
          src={entry.data.image}
          alt=""
          width={1000}
          height={270}
          class="beatmapset-panel__bg-image-inner"
        />
      </div>
    ) : (
      <div class="beatmapset-panel__bg-fallback" />
    )
  }

  <div class="beatmapset-panel__content-wrapper">
    <!-- Left: Small visible image -->
    <div class="beatmapset-panel__cover-col beatmapset-panel__cover-col--play">
      {
        entry.data.image ? (
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            width={360}
            height={270}
            class="beatmapset-panel__cover-image"
          />
        ) : (
          <div class="beatmapset-panel__cover-fallback" />
        )
      }
    </div>

    <!-- Right: Text content -->
    <div class="beatmapset-panel__info">
      <!-- Title row -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--title">
        <h3 class="beatmapset-panel__title">
          {entry.data.title}
        </h3>
      </div>

      <!-- Artist/Description row -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--artist">
        <p class="beatmapset-panel__description">
          {entry.data.description}
        </p>
      </div>

      <!-- Mapper row -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--mapper">
        <span class="beatmapset-panel__mapper">
          authored by <span class="beatmapset-panel__author-name">seraph</span>
        </span>
      </div>

      <!-- Stats row -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--stats">
        <div class="beatmapset-panel__stats-item" title={`${favorites.toLocaleString()} favourites`}>
          <span class="beatmapset-panel__stats-icon">
            <Icon name="lucide:heart" class="beatmapset-panel__stats-icon-inner" />
          </span>
          <span>{favorites.toLocaleString()}</span>
        </div>
        <div class="beatmapset-panel__stats-item" title={`${views.toLocaleString()} plays`}>
          <span class="beatmapset-panel__stats-icon">
            <Icon name="lucide:play-circle" class="beatmapset-panel__stats-icon-inner" />
          </span>
          <span>{views.toLocaleString()}</span>
        </div>
      </div>

      <!-- Date row -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--date">
        <div class="beatmapset-panel__stats-item">
          <span class="beatmapset-panel__stats-icon">
            <Icon name="lucide:calendar" class="beatmapset-panel__stats-icon-inner" />
          </span>
          <span>{shortDate}</span>
        </div>
      </div>

      <!-- Extra row: Status badge + Difficulty dots -->
      <div class="beatmapset-panel__info-row beatmapset-panel__info-row--extra extra-row" data-entry-id={entry.id}>
        <div class="beatmapset-panel__extra-item">
          <span class="beatmapset-panel__status-badge">
            Ranked
          </span>
        </div>
        <!-- Difficulty dots containers -->
        {[...groupedDifficulties].map(([mode, difficulties]) => (
          <div class="beatmapset-panel__extra-item beatmapset-panel__extra-item--dots">
            <!-- Gamemode icon -->
            <div class="beatmapset-panel__beatmap-icon" title={`${mode} mode`}>
              <i class={getGamemodeIconClass(mode)}></i>
            </div>
            <!-- Difficulty dots -->
            <div class="beatmapset-panel__beatmap-dots">
              {difficulties.map((diff) => (
                <div 
                  class="beatmapset-panel__beatmap-dot" 
                  style={`background-color: ${getDifficultyColor(diff.rating)};`}
                />
              ))}
            </div>
          </div>
        ))}
        
        <!-- Difficulty Popup -->
        <div class="difficulty-popup" data-popup-id={entry.id}>
          <div class="difficulty-popup__content">
            <div class="difficulty-popup__title">Difficulties</div>
            <div class="difficulty-popup__list">
              {[...groupedDifficulties].map(([mode, difficulties]) => (
                <div class="difficulty-popup__item">
                  <i class={getGamemodeIconClass(mode)}></i>
                  <span class="difficulty-popup__mode">{mode}</span>
                  <span class="difficulty-popup__count">({difficulties.length})</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Menu Container (expands on hover) -->
    <div class="beatmapset-panel__menu-container">
      <div class="beatmapset-panel__menu">
        <!-- Menu items would go here (love/download buttons) -->
        <!-- Not implementing buttons, just the container logic -->
      </div>
    </div>
  </div>

  <!-- Play Button -->
  <button
    class="beatmapset-panel__play-button play-button"
    data-audio-src={entry.data.audio ? `/blog/${entry.id}/${entry.data.audio.replace('./', '')}` : ''}
    data-entry-title={entry.data.title}
    aria-label="Play preview"
    onclick="event.preventDefault(); event.stopPropagation();"
  >
    <Icon name="lucide:play" class="beatmapset-panel__play-icon" />
  </button>
</a>

<script>
  // Difficulty popup hover logic (matches osu's delayed show/hide)
  document.addEventListener('DOMContentLoaded', () => {
    const timeouts: Record<string, number> = {}
    
    document.querySelectorAll('.extra-row').forEach((row) => {
      const entryId = (row as HTMLElement).dataset.entryId
      const popup = document.querySelector(`[data-popup-id="${entryId}"]`) as HTMLElement
      
      if (!popup) return
      
      const updatePopupPosition = () => {
        const cardRect = row.closest('.beatmapset-panel')?.getBoundingClientRect()
        if (cardRect) {
          popup.style.left = `${cardRect.left + window.scrollX}px`
          popup.style.top = `${cardRect.bottom + window.scrollY}px`
          popup.style.width = `${cardRect.width}px`
        }
      }
      
      const delayedShow = () => {
        window.clearTimeout(timeouts[entryId!])
        if (popup.style.opacity === '1') return
        
        updatePopupPosition()
        timeouts[entryId!] = window.setTimeout(() => {
          popup.style.opacity = '1'
          popup.style.pointerEvents = 'auto'
        }, 100)
      }
      
      const delayedHide = () => {
        window.clearTimeout(timeouts[entryId!])
        if (popup.style.opacity === '0') return
        
        timeouts[entryId!] = window.setTimeout(() => {
          popup.style.opacity = '0'
          popup.style.pointerEvents = 'none'
        }, 500)
      }
      
      const keepOpen = () => {
        window.clearTimeout(timeouts[entryId!])
        popup.style.opacity = '1'
        popup.style.pointerEvents = 'auto'
      }
      
      row.addEventListener('mouseenter', delayedShow)
      row.addEventListener('mouseleave', delayedHide)
      popup.addEventListener('mouseenter', keepOpen)
      popup.addEventListener('mouseleave', delayedHide)
      
      window.addEventListener('scroll', updatePopupPosition, true)
      window.addEventListener('resize', updatePopupPosition)
    })
  })
</script>

