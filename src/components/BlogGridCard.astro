                  <div class="difficulty-popup__difficulties">
                    {difficulties.map((diff, idx) => (
                      <div class="difficulty-popup__diff-item">
                        <span 
                          class="difficulty-popup__diff-badge"
                          style={`background-color: ${getDifficultyColor(diff.rating)}; color: ${diff.rating >= 6.0 ? 'white' : 'hsl(0, 0%, 15%)'};`}
